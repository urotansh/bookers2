<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1>User info</h1>
<h4><%= image_tag 'no_image.jpg' %></h4>
<h4><%= current_user.name %><h4>
<h4><%= current_user.introduction %></h4>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title<h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create book" %>
<% end %>