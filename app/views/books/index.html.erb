<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<%# ユーザ情報 profile_image,name,introduction %>
<%# TODO: 部分テンプレート化する  app/views/layouts/_side_menu.html.erb%>
<h1>User info</h1>
<h4><%= image_tag 'no_image.jpg' %></h4>
<h4><%= current_user.name %><h4>
<h4><%= current_user.introduction %></h4>
<h4><%= link_to "ユーザ編集", edit_user_path(current_user.id) %></h4>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title<h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit "Create book" %>
<% end %>

<%# 投稿一覧 %>
<h1>Books</h1>
<table border="1">
  <tr>
    <th><h4>User</h4></th>
    <th><h4>Title</h4></th>
    <th><h4>Opinion</h4></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <%# TODO: プロフィール画像を表示する @book.user.get_profile_image(100, 100) %>
    <th><%= image_tag "no_image.jpg" %></th>
    <th><%= link_to book.title, book_path(book.id) %></th>
    <th><%= book.body %></th>
  </tr>
  <% end %>
</table>