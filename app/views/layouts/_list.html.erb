<div class="col-md-8 offset-md-1">
  <h1>Books</h1>
  <table class="table">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(80, 80) %>
        <% end %>
      </th>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </table>
</div>
