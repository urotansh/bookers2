<h1>User info</h1>
<h4><%= image_tag user.get_profile_image(100, 100) %></h4>
<table border="1">
  <tr>
    <th><h4>Name<h4></th>
    <th><h4><%= user.name %><h4></th>
  </tr>
  <tr>
    <th><h4>Introduction</h4></th>
    <th><h4><%= user.introduction %></h4></th>
  </tr>
</table>

<h4><%= link_to "ユーザ編集", edit_user_path(user.id) %></h4>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title<h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit "Create book" %>
<% end %>
