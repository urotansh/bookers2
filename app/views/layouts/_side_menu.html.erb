<div class="col-md-3">
  <h1>User info</h1>
  <h4><%= image_tag user.get_profile_image(100, 100) %></h4>
  <table class="table">
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  
  <%= link_to(edit_user_path(user.id), class: 'btn btn-outline-secondary btn-lg btn-block') do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  
  <h1 class="mt-5">New book</h1>
  <%= form_with model: book do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control w100" %><br>
    <%= f.label :body, 'Opinion'  %><br>
    <%= f.text_area :body, class: "form-control w100" %><br><br>
    <%= f.submit "Create Book", class: 'btn btn-success btn-lg' %>
  <% end %>
</div>
