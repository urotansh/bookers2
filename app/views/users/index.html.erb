<%# User info %>
<%= render 'layouts/side_menu', user: @user, book: @book %>
  
<div class="col-md-8 offset-md-1">
  <%# ユーザ一覧 %>
  <h1>Users</h1>
  <table class="table">
    <tr>
      <th><h4>Image</h4></th>
      <th><h4>Name</h4></th>
      <th><h4></h4></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <th><%= image_tag user.get_profile_image(80, 80) %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user.id) %></th>
    </tr>
    <% end %>
  </table>
</div>